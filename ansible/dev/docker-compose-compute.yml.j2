---

spawner:
    image: {{ docker_user }}/core:dev
    command: "python3 -u /actors/spawner.py"
    environment:
        AE_IMAGE: "{{ docker_user }}/core:dev"
        abaco_conf_host_path: ${abaco_path}/abaco.conf
        _abaco_secret: 123

    volumes:
        - /var/run/docker.sock:/var/run/docker.sock
        - ./abaco.conf:/etc/abaco.conf

health:
    image: {{ docker_user }}/core:dev
    command: /actors/health_check.sh
    environment:
        AE_IMAGE: "{{ docker_user }}/core"
    volumes:
        - /var/run/docker.sock:/var/run/docker.sock
        - ./abaco.conf:/etc/abaco.conf
